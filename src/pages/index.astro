---
import PhoneBg from "../components/IntroComp/PhoneBg.astro";
import Pin from "../components/IntroComp/Pin.astro";
import Layout from "../layouts/Layout.astro";
import GithubSocial from "../components/IntroComp/GithubSocial.astro";
import LinkedinSocial from "../components/IntroComp/LinkedinSocial.astro";
import HackerankSocial from "../components/IntroComp/HackerankSocial.astro";
import ExperienceCard from "../components/ExpComp/ExperienceCard.astro";
import experience from "../data/experience.json";
import MobileComponent from "../components/ProjectsComp/MobileProject.astro";
import DesktopProject from "../components/ProjectsComp/DesktopProject.astro";
import TechBadge from "../components/ProjectsComp/TechBadge.astro";
import frontend from "../data/frontend.json";
import backend from "../data/backend.json";
import tools from "../data/tools.json";
import databases from "../data/databases.json";
import TechIcon from "../components/TechStackComp/TechIcon.astro";
---

<Layout title="Welcome to Astro.">
	<style>
		@font-face {
			font-family: "Montserrat-Regular";
			src: url("/fonts/Montserrat-Regular.ttf");
		}
		@font-face {
			font-family: "Montserrat-Bold";
			src: url("/fonts/Montserrat-Bold.ttf");
		}
		@font-face {
			font-family: "Montserrat-Light";
			src: url("/fonts/Montserrat-Light.ttf");
		}
		#title {
			font-family: "Montserrat-Bold";
		}
		#subtitle {
			font-family: "Montserrat-Regular";
		}
		a {
			font-family: "Montserrat-Light";
		}
		#exp-title {
			font-family: "Montserrat-Bold";
		}
		.project-mobile {
			background: linear-gradient(
				to left top,
				rgb(197, 134, 16),
				rgb(144, 23, 168)
			);
		}
		.project-desktop {
			background: linear-gradient(to left top, #d177da, #3e4eff);
		}
		.project-desktop-2 {
			background: linear-gradient(to left top, #cfb612, #00bbbb);
		}
		.tech-title {
			background: rgb(107 114 128);
		}
		.tech-container:hover .tech-title {
			background: white;
			box-shadow: rgba(100, 100, 101, 0.488) 0px 7px 29px 0px;
			transition: all;
		}
	</style>

	<section
		class="max-w-[1400px] w-[1400px] my-36 m-auto h-fit flex justify-between pb-5"
	>
		<div class="flex flex-col justify-between">
			<div>
				<h1 id="title" class="text-[90px] font-black text-white">
					Bruno Amat,
				</h1>
				<h1 id="subtitle" class="text-[75px] text-white">
					full stack developer.
				</h1>
				<div class="mt-5 flex justify-start items-center gap-3">
					<a
						href=""
						download=""
						class="bg-[#FF4667] text-white text-sm font-bold px-6 py-2 rounded-full
						hover:bg-transparent hover:text-[#FF4667] border hover:border border-[#FF4667]
						transition-all hover:transition-all tracking-wider"
					>
						<button type="button">Download CV</button>
					</a>
					<GithubSocial url="https://github.com/amatbruno" />
					<LinkedinSocial
						url="https://www.linkedin.com/in/mebruno/"
					/>
					<HackerankSocial
						url="https://www.hackerrank.com/profile/amattbruno"
					/>
				</div>
			</div>

			<div class="flex gap-20">
				<Pin
					icon="./icons/briefcase.svg"
					title="Recent experience"
					text="C# Junior Developer at Header Active Services"
				/>
				<Pin
					icon="./icons/location.svg"
					title="Location"
					text="Barcelona, Spain"
				/>
			</div>
		</div>

		<div class="h-fit flex justify-center">
			<div class="absolute bg-gray-300 text-gray-300 w-32 h-7 rounded-lg">
				.
			</div>
			<PhoneBg />
		</div>
	</section>

	<section class="max-w-[1400px] m-auto pb-5">
		<h1 id="exp-title" class="text-white text-2xl tracking-wide mb-5">
			Professional Experience
		</h1>
		<div>
			<ol class="items-start justify-center sm:flex">
				{
					experience.map((el) => (
						<ExperienceCard
							role={el.role}
							date={el.duration}
							contract={el.contract}
						/>
					))
				}
			</ol>
		</div>
	</section>

	<section class="max-w-[1400px] m-auto my-24">
		<h1 id="exp-title" class="text-white text-2xl tracking-wide mb-5">
			Projects Overview
		</h1>

		<div class="mt-10 flex flex-wrap gap-[99px]">
			<article>
				<div
					class="project-mobile w-[500px] py-28 rounded-[50px] flex flex-col justify-center items-center"
				>
					<MobileComponent
						url="/assets/videos/demo-bitmap.mp4"
						repo="https://github.com/amatbruno/bitmap-android"
					/>
				</div>
				<div class="flex mt-5 justify-start items-start gap-3">
					<h1 class="text-white text-sm font-[Montserrat-Bold]">
						Bitmap
					</h1>
					<h3 class="text-gray-300 text-sm [Montserrat-Light]">
						Android app that finds the bitmap position from an image
					</h3>
				</div>
				<div class="flex gap-3">
					<TechBadge name="Java" svg="/icons/java.svg" />
					<TechBadge name="Android" svg="/icons/android.svg" />
				</div>
			</article>

			<article>
				<div
					class="project-desktop py-28 px-[50px] rounded-[50px] h-[624px] flex flex-col justify-center items-center"
				>
					<DesktopProject
						url="/assets/videos/demo-sphere.mp4"
						repo="https://github.com/amatbruno/sphere-laravel"
					/>
				</div>
				<div class="flex mt-5 justify-start items-center gap-3">
					<h1 class="text-white text-sm font-[Montserrat-Bold]">
						Sphere
					</h1>
					<h3
						class="text-gray-300 text-sm w-fit text-wrap font-[Montserrat-Light]"
					>
						Professional blog webpage with for create and manage
						content with different user roles.
					</h3>
				</div>
				<div class="flex gap-3">
					<TechBadge name="Laravel" svg="/icons/laravel.svg" />
					<TechBadge name="Tailwind CSS" svg="/icons/tailwind.svg" />
					<TechBadge name="MySQL" svg="/icons/mysql.svg" />
				</div>
			</article>

			<article>
				<div
					class="project-desktop-2 py-28 px-[99px] w-[1400px] rounded-[50px] h-[624px] flex flex-col justify-center items-center"
				>
					<DesktopProject
						url="/assets/videos/demo-sketch-fiesta.mp4"
						repo="https://github.com/amatbruno/sketch-fiesta"
					/>
				</div>
				<div class="flex mt-5 justify-start items-center gap-3">
					<h1 class="text-white text-sm font-[Montserrat-Bold]">
						Sketch Fiesta
					</h1>
					<h3
						class="text-gray-300 text-sm w-fit text-wrap font-[Montserrat-Light]"
					>
						Interactive web similar to Pinturillo/Skribble that
						allows you draw and play with friends.
					</h3>
				</div>
				<div class="flex gap-3">
					<TechBadge name="HTML" svg="/icons/html.svg" />
					<TechBadge name="CSS" svg="/icons/css.svg" />
					<TechBadge name="JavaScript" svg="/icons/javascript.svg" />
					<TechBadge name="Node" svg="/icons/node.svg" />
				</div>
			</article>
		</div>
	</section>

	<section class="max-w-[1400px] m-auto pb-5">
		<h1 id="exp-title" class="text-white text-2xl tracking-wide mb-5">
			Tech Stack
		</h1>
		<div class="grid grid-cols-2 gap-16">
			<div
				class="tech-container border-4 border-gray-500 hover:border-white transition-all rounded-3xl p-5"
			>
				<h1
					class="tech-title text-center m-auto font-[Montserrat-Bold] text-lg my-7 py-1 px-5 w-52 text-black rounded-full"
				>
					Frontend
				</h1>
				<div class="flex flex-wrap gap-10 justify-center items-center">
					{
						frontend.map((front) => (
							<TechIcon icon={front.logo} name={front.tech} />
						))
					}
				</div>
			</div>

			<div
				class="tech-container border-4 border-gray-500 hover:border-white transition-all rounded-3xl p-5"
			>
				<h1
					class="tech-title text-center m-auto font-[Montserrat-Bold] text-lg my-7 py-1 px-5 w-52 text-black rounded-full"
				>
					Backend
				</h1>
				<div
					class="flex flex-wrap gap-10 justify-center items-center p-3"
				>
					{
						backend.map((back) => (
							<TechIcon icon={back.logo} name={back.tech} />
						))
					}
				</div>
			</div>

			<div
				class="tech-container border-4 border-gray-500 hover:border-white transition-all rounded-3xl p-5"
			>
				<h1
					class="tech-title text-center m-auto font-[Montserrat-Bold] text-lg my-7 py-1 px-5 w-52 text-black rounded-full"
				>
					Tools & Software
				</h1>
				<div class="flex flex-wrap gap-10 justify-center items-center">
					{
						tools.map((tool) => (
							<TechIcon icon={tool.logo} name={tool.tech} />
						))
					}
				</div>
			</div>

			<div
				class="tech-container border-4 border-gray-500 hover:border-white transition-all rounded-3xl p-5"
			>
				<h1
					class="tech-title text-center m-auto font-[Montserrat-Bold] text-lg my-7 py-1 px-5 w-52 text-black rounded-full"
				>
					Databases
				</h1>
				<div class="flex flex-wrap gap-10 justify-center items-center">
					{
						databases.map((database) => (
							<TechIcon
								icon={database.logo}
								name={database.tech}
							/>
						))
					}
				</div>
			</div>
		</div>
	</section>

	<footer class="max-w-[1400px] m-auto py-10">
		<h3 class="text-white font-[Montserrat-Bold] text-center">
			Â© Bruno Amat. 2024
		</h3>
	</footer>
</Layout>
