---
const { url, title, desc } = Astro.props;
---

<style>
    @font-face {
        font-family: "Montserrat-Light";
        src: url("/fonts/Montserrat-Light.ttf");
    }
    @font-face {
        font-family: "Montserrat-Bold";
        src: url("/fonts/Montserrat-Bold.ttf");
    }
    .project-desktop {
        background: rgb(82, 96, 158);
    }
    h1 {
        font-family: "Montserrat-Bold";
    }
    h3 {
        font-family: "Montserrat-Light";
    }
</style>
<div class="flex flex-col">
    <div class="project-desktop w-[800px] h-fit rounded-[50px]">
        <img width="225" class="rounded m-auto py-28" src={url} />
    </div>
    <div class="flex mt-5 justify-start items-center gap-3">
        <h1 class="text-white">{title}</h1>
        <h3 class="text-gray-300">{desc}</h3>
    </div>
</div>

